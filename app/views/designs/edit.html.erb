<% provide(:title, 'デザイン編集') %>

<h3>デザイン編集</h3>

<div class="design-edit">
  <div class="col-md-6 col-md-offset-3">
    <div class ="center"><%= image_tag @design.image.url %></div>
    
    <%= form_with(model: @design, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @design %>
    
      <%= f.label "投稿画像", class: "label-user" %>
      <%= f.file_field :image %>

      <%= f.label "タイトル", class: "label-user" %>
      <%= f.text_field :title, class: "form-control" %>
  
      <%= f.label "種類", class: "label-user" %>
      <%= f.select :type, [['機種訴求'], ['季節-春'], ['季節-夏'], ['季節-秋'], ['季節-冬'],
                            ['似顔絵'], ['コーナー訴求'], ['その他']], { include_blank:'選択してください' }, class: "form-control" %>

      <%= f.label "機種", class: "label-user" %><br>
      <label>
        <%= f.radio_button :machine, "海物語" %>海物語
        <%= f.radio_button :machine, "ジャグラー" %>ジャグラー
        <%= f.radio_button :machine, "北斗の拳" %>北斗の拳
        <%= f.radio_button :machine, "花の慶次" %>花の慶次
        <%= f.radio_button :machine, "その他未分類" %>その他未分類
      </label><br>
      <div class ="center">
        <%= f.submit "編集", class: "btn btn-primary btn-lg" %>
        <button type="button" class="btn btn-default btn-lg %>" onclick="history.back()" >戻る</button>
      </div>
    <% end %>
  </div>
</div>