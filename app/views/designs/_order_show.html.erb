<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">デザイン注文</h1>
    </div>
    <div class="modal-body">
      <div class="row design-order">
        <div class="col-md-10 col-md-offset-1">
          <h3><%= @design.title %></h3>
          <h6>
            <%= @design.type %>
            <% if @design.machine.present? %>
              ：<%= @design.machine %>
            <% end %>
          </h6>
          <h6>デザイナー：<%= link_to @designer.name, user_path(@user) %>　作成日：<%= @design.created_at.strftime('%Y/%m/%d') %></h6>
          <%= image_tag @design.image.url %><br><br>
          
          
          <%= form_with(model: @design, url: update_order_show_user_design_path(@user, @design), local: true, method: :patch) do |f| %>
          <%= render 'shared/error_messages', object: @design %>
            <table class="table table-bordered table-condensed table-striped user-table">
              <thead>
                <tr>
                <th>サイズ</th>
                <th width="80px">方向</th>
                <th>種類</th>
                <th>枚数</th>
                <th>納品日</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                <td>
                  <%= f.select :size, [['B0'], ['B1'], ['B2'], ['B3'], ['B4'],
                                      ['A0'], ['A1'], ['A2'], ['A3'], ['A4']],
                                      { include_blank: true }, class: "form-control" %>
                </td> 
                <td>
                  <label>
                    <%= f.radio_button :hw, "縦" %>縦
                    <%= f.radio_button :hw, "横" %>横
                  </label>
                </td>
                <td><%= f.select :size, [['合成紙'], ['ラミ']], { include_blank: true }, class: "form-control" %></td>
                <td><%= f.number_field :number, class: "form-control" %></td>
                <td><%= f.date_field :delivery_date, class: "form-control" %></td>
                
                </tr>
                <tr>
                  <th valign="middle">備考</th>
                  <td colspan="5"><%= f.text_area :note, class: "form-control" %></td>
                </tr>
              </tbody>
            </table>
          
        
            <div class ="center">
              <%= f.submit "カートに入れる", class: "btn btn-success btn-lg" %>
              <button type="button" class="btn btn-default btn-lg %>" data-dismiss="modal">戻る</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>
