<% provide(:title, @user.name) %>

<div class="user-show">
    <% if @user.img.present? %>
      <%= image_tag @user.img.url %>
    <% else %>
      <%= image_tag "/user_images/default.png" %>
    <% end %>
    <h2><%= @user.name %></h2>
    <h2><%= @user.email %></h2>
    <h2><%= @user.affiliation %></h2>
</div>
