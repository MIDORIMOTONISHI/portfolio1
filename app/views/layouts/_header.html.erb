<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <% if current_user.admin? %>
        <%= link_to "Design Catalog", users_path, id: "logo" %>
      <% else %>
        <%= link_to "Design Catalog", current_user, id: "logo" %>
      <% end %>
    <% else %>
      <%= link_to "Design Catalog", root_path, id: "logo" %>
    <% end %>
    <nav>
      <% if logged_in? %>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.admin? %>
            <li><%= link_to "トップへ", users_path %></li>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "出勤社員一覧", working_user_path(current_user) %></li>
            <li><%= link_to "拠点情報の修正", bases_path %></li>
            <li><%= link_to "基本情報の修正", edit_info_path %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "トップへ", current_user %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                アカウント <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "個人情報", current_user %></li>
                <li><%= link_to "編集", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>  
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        </ul>
      <% end %>
    </nav>
  </div>
</header>